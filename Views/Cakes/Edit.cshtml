@model CupCakeShop.Models.Cake

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Page</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CupCakeName" class="control-label"></label>
                <input asp-for="CupCakeName" class="form-control" />
