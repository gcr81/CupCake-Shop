            </div>
            <div class="form-group">
                <label asp-for="CupCakePrice" class="control-label"></label>
                <input asp-for="CupCakePrice" class="form-control" />
                <span asp-validation-for="CupCakePrice" class="text-danger"></span>
            </div>
